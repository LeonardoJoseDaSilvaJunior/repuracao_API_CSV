{
    "python.analysis.typeCheckingMode": "off",
    "pythonPath": "api_csv/ambientev/Scripts/python",
    "python.analysis.extraPaths": ["api_csv/ambientev/Lib/site-packages"],
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintArgs": ["--load-plugins", "pylint-flask"],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["--ignore=tests"],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
    "files.watcherExclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "api_csv/ambientev/Scripts/black.exe",
    // Caminho para o Black no ambiente virtual
    "python.formatting.blackArgs": ["-l", "79"],
    "editor.formatOnSave": true
}